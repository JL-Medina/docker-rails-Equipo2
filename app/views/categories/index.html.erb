<p id="notice"><%= notice %></p>

<h1><%=t('name_category')%></h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>ID</th>
      <th colspan="3"></th>
      
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= category.id %></td>
        <td><%= link_to t('common.show'), category %></td>
        <td><%= link_to t('common.edit'), edit_category_path(category) %></td>
        <td><%= link_to t('common.destroy'), category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

