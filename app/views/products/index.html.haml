%h1 Listing products

%table
  %thead
    %tr
      %th Name
      %th Price
      %th Description
      %th Category
      %th
      %th
      %th

  %tbody
    - @products.each do |product|
      %tr
        %td= product.name
        %td= product.price
        %td= product.description
        %td= product.category
        %td= link_to t('common.show'), product
        %td= link_to t('common.edit'), edit_product_path(product)
        %td= link_to t('common.destroy'), product, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Product', new_product_path
