<p id="notice"><%= notice %></p>

<h1><%=t('name_user')%></h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Lastname</th>
      <th>Phone</th>
      <th>Address</th>
      <th>Email</th>
      <th>Fecha nac</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.lastname %></td>
        <td><%= user.phone %></td>
        <td><%= user.address %></td>
        <td><%= user.email %></td>
        <td><%= user.fecha_nac %></td>
        <td><%= link_to t('common.show'), user %></td>
        <td><%= link_to t('common.edit'), edit_user_path(user) %></td>
        <td><%= link_to t('common.destroy'), user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<br>

