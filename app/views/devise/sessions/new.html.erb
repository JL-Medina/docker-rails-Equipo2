<div class='background-full'>

 <div class="popup">
 <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <p class="titulo">REGISTRATE</p>

        <label for="input" class="mail">Ingresa tu correo</label>
          <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => 'Mailnput' %>
  </div>

    <div class='mail'>Ingresa tu contraseña</div>
    <div class="field">
    <%= f.password_field :password, autocomplete: "current-password", :class => 'pass-input'  %>
  </div>
    <label for="input" class='email-input'></label>
        
    <div class="Ingreso"> 
        <div class="form-check">
            <label class="container">
                <input class="checkbox" type="checkbox" checked="checked">
                <span class="checkmark">Términos y condiciones</span>
            </label>
        </div>
        
    </div>
    
    <div class="boton-confirmacion">
        <div class="actions">
          <%= f.submit "CONFIRMAR", :class => 'btn-submit' %>
        </div>
    </div>
       <div class="separador">
        <hr class="linea-separadora">
        <p class="texto-separador">o también</p>
        <hr class="linea-separadora">
       </div>
    <div class="boton-google">
        <a class="btn-google" href="#" role="button">
            <img src="https://www.freepnglogos.com/uploads/google-logo-png/google-logo-icon-png-transparent-background-osteopathy-16.png" alt="" class="google-logo">
            <p class="registro1">Registrate con Gmail</p>
        </a>
    </div>
    <div class="boton-facebook">
        <a class="btn-facebook" href="#" role="button">
            <img src="https://pnggrid.com/wp-content/uploads/2021/04/facebook-white-circle-1024x1024.png" alt="" class="facebook-logo">
            <p class="registro2">Registrate con Facebook</p>
        </a>
    </div>
</div>

<% end %>


<%= render "devise/shared/links" %>


</div>
